<div id="title">
    <div>
        <p><%= @article.created_at.strftime('%Y/%m/%d') %> / 書いた人:<%= @article.user.email %></p>
        <h1><%= @article.title %></h1>
    </div>
</div>

<div id="article_wrap">

    <div id="content">
      <%= @article.body %>
    </div>


    <div id="sidebar">

        <h2>★PV数ランキング</h2>
        <ul>
            <!--<li><a href="">記事タイトル記事タイトル１記事タイトル記事タイトル<span>（10PV）</span></a></li>-->
            <!--<li><a href="">記事タイトル記事タイトル１記事タイトル記事タイトル<span>（8PV）</span></a></li>-->
            <!--<li><a href="">記事タイトル記事タイトル１記事タイトル記事タイトル<span>（2PV）</span></a></li>-->
            <% @ranks.each do |rank| %>
                <table>
                    <tr>
                        <th><%= link_to rank[0], article_path(Article.find_by(title: rank[0])), style: "color: #00a9a2;"%></th>
                        <th>(<%= rank[1].round %>PV)</th>
                    </tr>
                </table>
            <% end %>
        </ul>
    </div>
    <div class="clear"></div>
</div>